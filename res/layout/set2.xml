<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
	    android:id="@+id/topGroup"
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/tab">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/left"
            android:onClick="backBtn" />

	<TextView
	    android:id="@+id/mainTopText"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="40dp"
	    android:layout_marginTop="30dp"
	    android:fontFamily="Malgun Gothic"
	    android:text="Calendar"
	    android:textColor="#FFFFFF"
	    android:textSize="30sp" />

	    
	</LinearLayout>
    
	<RelativeLayout android:id="@+id/RelativeLayout01" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="#E5D85C">
	
		<Button android:id="@+id/Button03" android:background="#00000000" android:textColor="#ffffffff"
		android:layout_height="50dip" android:text="&lt;" android:layout_alignParentLeft="true" android:layout_width="50dip"></Button>
		
		
	    <LinearLayout android:id="@+id/LinearLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
	    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
	    android:id="@+id/tv1" android:text="yyyy" android:textSize="18sp" android:textColor="#ffffffff"></TextView>
	    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
	    android:id="@+id/year_tv" android:text="년" android:layout_toRightOf="@+id/tv1" android:textSize="18sp" android:textColor="#ffffffff"></TextView>
	    
	    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
	    android:id="@+id/tv2" android:text="MM" android:layout_marginLeft="20dip" android:textSize="18sp" android:textColor="#ffffffff"></TextView>
	    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
	    android:id="@+id/motnh_tv" android:text="월" android:textSize="18sp" android:textColor="#ffffffff"></TextView>
	    </LinearLayout>
		
	    
		<Button android:id="@+id/Button04" android:background="#00000000" android:textColor="#ffffffff"
		android:layout_height="50dip" android:text="&gt;" android:layout_alignParentRight="true" android:layout_width="50dip"></Button>
		
	</RelativeLayout>
	
<LinearLayout 
    android:orientation="vertical" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent">
	<LinearLayout 
	    android:layout_width="fill_parent" 
	    android:layout_height="1px" 
	    android:background="#99999999"/>
	
	<LinearLayout 
	    android:id="@+id/calendar_lLayout" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:orientation="horizontal"/>
	
	<LinearLayout 
	    android:layout_height="1px" 
	    android:layout_width="fill_parent" 
	    android:background="#99999999"/>
</LinearLayout>

</LinearLayout>