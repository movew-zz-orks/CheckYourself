<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/editpage">
     <LinearLayout
	    android:id="@+id/topGroup"
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/tab">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/left"
            android:onClick="backBtn" />

	<TextView
	    android:id="@+id/mainTopText"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="40dp"
	    android:layout_marginTop="30dp"
	    android:fontFamily="Malgun Gothic"
	    android:text="Write schedule"
	    android:textColor="#FFFFFF"
	    android:textSize="30sp" />

	</LinearLayout>
    
     <LinearLayout
         android:id="@+id/viewGroupp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
         
    <Spinner
  		  	android:id="@+id/category"
    		android:layout_width="100dp"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="10dp"
    		android:entries="@array/priorities"    		
    		android:textColor="#ff000000"/>
    
    <LinearLayout
        android:id="@+id/viewGroup02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
        android:orientation="horizontal">
    	
    	
    	    
    	<EditText
        	android:id="@+id/afterYear"
        	android:layout_width="70dp"
        	android:layout_height="wrap_content"
        	android:textSize="20sp"
        	 android:textColor="#ff000000"/>
    
    	<TextView 
        	android:id="@+id/afterYearTxt"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="년"
        	android:textSize="20sp"
  			 android:textColor="#ff000000"/>
    	
    	<EditText
        	android:id="@+id/afterMonth"
        	android:layout_width="50dp"
        	android:layout_height="wrap_content"
        	android:textSize="20sp"
        	 android:textColor="#ff000000"/>
    
    	<TextView 
        	android:id="@+id/afterMonthTxt"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="월"
        	android:textSize="20sp"
        	 android:textColor="#ff000000"/>
    	
    	<EditText
        	android:id="@+id/afterDay"
        	android:layout_width="50dp"
        	android:layout_height="wrap_content"
      		 android:textColor="#ff000000"
        	android:textSize="20sp"/>
    
    	<TextView 
        	android:id="@+id/afterdayTxt"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="일"
        	android:textColor="#ff000000"
        	android:textSize="20sp"/>
    	
    	
        </LinearLayout>
        
    </LinearLayout>
        <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="1.5dp"
    android:background="#ff000000"></LinearLayout>
    
<LinearLayout
    android:id="@+id/LinearLayout01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">
    <EditText
        android:id="@+id/todo_edit_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
    	android:hint="@string/todo_edit_summary"
    	android:imeOptions="actionNext"
    	android:textColor="#ff000000">
        
    </EditText>  
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="1.5dp"
    android:background="#ff000000"></LinearLayout>
    <EditText
        android:id="@+id/todo_edit_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="@string/todo_edit_description"
        android:imeOptions="actionNext"
        android:textColor="#ff000000">
    </EditText>
    
    <LinearLayout
        android:id="@+id/viewGroup03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    	<Button
	        android:id="@+id/todo_edit_button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/todo_edit_confirm"></Button>
    
    	<TextView 
        	android:id="@+id/currentTime"
        	android:layout_marginLeft="100dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
